<hibernate-mapping>  
<class name="com.haojie.pojo.Customer" table="customer">  
    <id name="id" column="id">  
        <generator class="increment"/>  
    </id>  
    
    <property name="name" column="name" />  
    <property name="address" column="address" />  
    <property name="tel" column="tel" />  
</class>  
</hibernate-mapping>  